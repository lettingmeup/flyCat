<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.whuahua.smart.flycat.dao.GoodsListDao" >
  <resultMap id="BaseResultMap" type="com.whuahua.smart.flycat.po.GoodsPO" >
    <result column="goods_id" property="goodsId" jdbcType="INTEGER" />
    <result column="goods_name" property="goodsName" jdbcType="VARCHAR" />
    <result column="goods_price" property="goodsPrice" jdbcType="BIGINT" />
    <result column="goods_img" property="goodsImg" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="goodssData_Column_List" >
  	goods_id,goods_name,goods_price,goods_img
  </sql>
  
  
  <select id="queryGoods" resultMap="BaseResultMap" >
  	SELECT 
  	<include refid="goodssData_Column_List" />
  	FROM fly_goods
  </select>
  
  
  <select id="queryByName" resultMap="BaseResultMap" >
  	SELECT 
  	<include refid="goodssData_Column_List" />
  	FROM fly_goods where goods_name like concat('%',#{goodsName},'%')
  </select>
  
  <select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
  	SELECT 
  	<include refid="goodssData_Column_List" />
  	FROM fly_goods where goods_id = #{goodsId}
  </select>
  
  
  
</mapper>

    